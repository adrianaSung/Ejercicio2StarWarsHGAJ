<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#737B9E"
    tools:context=".view.activities.Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvPersonaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    tools:text="Personaje" />

                <TextView
                    android:id="@+id/tvPlaneta"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:fontFamily="@font/aldrich"
                    android:text="Planeta"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvNombrePlaneta"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Nombre"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvPeriodoR"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Periodo de rotaciÃ³n"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvPeriodoO"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Periodo orbital"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvDiametro"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Diametro"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvClima"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Clima"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvTerreno"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Terreno"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvPoblacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/supermercado_one"
                    android:text="Poblacion"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/pbConexion"
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>